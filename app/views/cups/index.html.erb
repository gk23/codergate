<h1>Listing cups</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Desc</th>
    <th>Image</th>
    <th>Filter</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cups.each do |cup| %>
  <tr>
    <td><%= cup.name %></td>
    <td><%= cup.desc %></td>
    <td><%= cup.image %></td>
    <td><%= cup.filter %></td>
    <td><%= link_to 'Show', cup %></td>
    <td><%= link_to 'Edit', edit_cup_path(cup) %></td>
    <td><%= link_to 'Destroy', cup, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

