<!--
    管理界面，只有自己创建的课程才能修改
-->
<%= content_for :scripts do %>
    <script type="text/javascript">
        $(document).ready(function(){
            $('.course_title').editable('http://www.example.com/save.php');
            $(".course_desc").editable('http://www.example.com/save.php');
        });
    </script>
<% end %>
<div class="course_title"><%= @course.name%></div>
<p class="course_desc"><%= @course.desc%></p>
<div class="lessons">
    <% if @lessons.size==0 %>
        <span>请添加课程章节：</span><%= link_to '添加章节',new_course_lesson_path(@course.id) %>
    <%else %>
    <ul >
        <% @lessons.each do |lesson| %> 
        <li class="lesson">
            <h3><%= link_to lesson.name,edit_lesson_path(lesson.id) %></h3>     
            <%=lesson.desc%>
        </li>
        <% end %>
    </ul>
    <%end%>
</div>
<%= link_to '添加章节',new_course_lesson_path(@course.id) %>
<%= link_to '预览', @course %> 
