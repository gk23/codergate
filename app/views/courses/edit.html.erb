<!--
    管理界面，只有自己创建的课程才能修改
-->
<h1><%= @course.name%></h1>
<p><%= @course.desc%></p>
<div class="lessons">
    <% if @lessons.size==0 %>
        <span>请添加课程章节：</span><%= link_to '添加章节',:controller=>:lessons,:action=>:new %>
    <%else %>
    <ul >
        <% @lessons.each do |lesson| %> 
        <li class="lesson">
            <h3><%= link_to lesson.name,edit_lesson_path(lesson.id) %></h3>     
            <%=lesson.desc%>
        </li>
        <% end %>
    </ul>
    <%end%>
</div>
<%= link_to '添加章节',new_course_lesson_path(@course.id) %>
<%= link_to '预览', @course %> 
